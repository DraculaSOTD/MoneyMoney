# Trading Platform Environment Configuration
# ==========================================
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/trading_platform
# Example: postgresql://postgres:mypassword@localhost:5432/trading_db

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_2024
ADMIN_JWT_SECRET=admin_super_secret_jwt_key_change_this_in_production_2024

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true  # Set to 'false' for production

# Server Configuration
API_PORT=8001
API_HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Data Collection Defaults
DEFAULT_DATA_INTERVAL=1m
DEFAULT_DAYS_BACK=30

# Cache Configuration
CACHE_TTL_SECONDS=300  # 5 minutes

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# WebSocket Configuration
WS_PING_INTERVAL=30  # seconds
WS_MAX_CONNECTIONS=100

# Model Training Configuration
MODEL_TRAINING_TIMEOUT=3600  # 1 hour in seconds
MAX_CONCURRENT_TRAINING_JOBS=3

# Performance Settings
DATA_CHUNK_SIZE=10000
MAX_PARALLEL_WORKERS=4
ENABLE_PARALLEL_PROCESSING=true
