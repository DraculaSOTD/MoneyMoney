# MoneyMoney Environment Configuration
# ======================================
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development  # development, production

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=tradingdashboard_jwt_secret_key_2024_change_in_production

# Trading Platform API Configuration
TRADING_API_URL=http://localhost:8001

# Database Configuration (SQLite)
DATABASE_PATH=./database/tradingdashboard.db

# Session Configuration
SESSION_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration
CORS_ORIGIN=*  # Set to specific domain in production

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Auto-Refresh Settings
CHART_REFRESH_INTERVAL_MS=60000  # 1 minute
