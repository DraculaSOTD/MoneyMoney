# Environment Configuration for Crypto ML Trading System
# Copy this file to .env and configure your settings

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG_MODE=true

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
BUILD_TARGET=development
COMPOSE_PROJECT_NAME=crypto-ml-trading

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=trading_db
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=secure_password_here
DATABASE_URL=postgresql://trading_user:secure_password_here@postgres:5432/trading_db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_ENABLED=true
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key_here

# ============================================================================
# TRADING API KEYS (External Services)
# ============================================================================
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true

# Coinbase Pro
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET_KEY=your_coinbase_secret_key
COINBASE_PASSPHRASE=your_coinbase_passphrase
COINBASE_SANDBOX=true

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
ELASTICSEARCH_URL=http://elasticsearch:9200
LOG_TO_ELASTICSEARCH=false

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================
# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=alerts@yourcompany.com

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#trading-alerts

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Encryption keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Python optimization
PYTHONOPTIMIZE=1
PYTHONHASHSEED=0

# Memory limits
MAX_MEMORY_GB=4
MAX_CPU_CORES=2

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
# Model persistence
MODEL_STORAGE_PATH=/app/saved_models
MODEL_BACKUP_ENABLED=true
MODEL_BACKUP_INTERVAL=24h

# Training configuration
ENABLE_PARALLEL_TRAINING=true
MAX_TRAINING_WORKERS=2
GPU_ENABLED=false
CUDA_VISIBLE_DEVICES=0

# ============================================================================
# DATA CONFIGURATION
# ============================================================================
# Data sources
DATA_SOURCE=file
DATA_DIRECTORY=/app/data/historical
MAX_DATA_AGE_DAYS=365

# Real-time data
ENABLE_REAL_TIME_DATA=false
DATA_UPDATE_INTERVAL=60

# ============================================================================
# RISK MANAGEMENT
# ============================================================================
MAX_POSITION_SIZE=0.20
MAX_PORTFOLIO_RISK=0.05
MAX_DRAWDOWN=0.15
KELLY_FRACTION=0.25

# Stop loss and take profit
ENABLE_STOP_LOSS=true
STOP_LOSS_PERCENTAGE=0.02
ENABLE_TAKE_PROFIT=true
RISK_REWARD_RATIO=2.0

# ============================================================================
# BACKTESTING CONFIGURATION
# ============================================================================
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_INITIAL_CAPITAL=100000
BACKTEST_COMMISSION=0.001

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# Jupyter
JUPYTER_ENABLE_LAB=true
JUPYTER_PORT=8888
JUPYTER_TOKEN=

# Testing
RUN_TESTS=false
TEST_COVERAGE_THRESHOLD=0.80

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================
# Uncomment and modify for production deployment

# ENVIRONMENT=production
# DEBUG_MODE=false
# LOG_LEVEL=WARNING
# BUILD_TARGET=production
# BINANCE_TESTNET=false
# COINBASE_SANDBOX=false
# API_ENABLED=false